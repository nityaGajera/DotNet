<div class="row clearfix" ng-controller="app.views.branch.index as vm">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card main-content">
            <div class="header">
                <h2>
                    @L("Branch")
                </h2>
                <ul class="dropdown-menu pull-right">
                    <li><a href="javascript:void(0);" class="waves-effect waves-block()" ng-click="vm.refresh();"><i class="material-icons">refresh</i> @L("Refresh")</a></li>
                </ul>
            </div>
            <!-- ******************** -->
            <div class="body table-responsive">


                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>@L("Name")</th>
                            <th>@L("Action")</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="t in vm.branch">
                            <td>{{t.name}}</td> </tr>
                    </tbody>
                </table>
                <button type="button" data-toggle="modal" class="btn btn-primary btn-circle waves-effect waves-circle waves-float pull-right" ng-click="vm.openBranchCreate()">
                    <i class="material-icons">add</i>
                </button>
            </div>
        </div>
    </div>
</div>