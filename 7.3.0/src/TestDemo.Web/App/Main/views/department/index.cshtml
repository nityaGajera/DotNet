<div class="row clearfix" ng-controller="app.views.department.index as vm">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card main-content">
            <div class="header">
                <h2>
                    @L("Department")
                </h2>
                <ul class="dropdown-menu pull-right">
                    <li><a href="javascript:void(0);" class="waves-effect waves-block()" ng-click="vm.refresh();"><i class="material-icons">refresh</i> @L("Refresh")</a></li>
                </ul>
            </div>
            <!-- ******************** -->
            <div class="body table-responsive">

               
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>@L("Name")</th>
                            <th>@L("Action")</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="t in vm.department">
                            <td>{{t.name}}</td>

                            <td class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    <i class="material-icons">menu</i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a class="waves-effect waves-block" ng-click="vm.opendepartmentEdit(t)"><i class="material-icons">create</i>Edit</a></li>
                                    @*<li><a class="waves-effect waves-block" ng-click="vm.deletedata(t)"><i class="material-icons">delete_sweep</i>Delete</a></li>*@
                                </ul>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <button type="button" data-toggle="modal" class="btn btn-primary btn-circle waves-effect waves-circle waves-float pull-right" ng-click="vm.opendepartmentCreate()">
                    <i class="material-icons">add</i>
                </button>
            </div>
        </div>
    </div>
</div>