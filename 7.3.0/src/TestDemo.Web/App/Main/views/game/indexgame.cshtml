<div class="row clearfix" ng-controller="app.views.game.indexgame as vm">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card main-content">
            <div class="header">
                <h2>
                    @L("Game")
                </h2>
                <i class="fa fa-spin fa-spinner" ng-if="vm.isTableLoading"></i>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <input type="text" ng-model="search" ng-change="nameList()" placeholder="Search...">
                        <button ng-click="nameList()">Search</button>
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" ng-click="searchBy()" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);" class="waves-effect waves-block()" ng-click="vm.refresh();"><i class="material-icons">refresh</i> @L("Refresh")</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <!-- ******************** -->
            <div class="body table-responsive">


                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>@L("Name")</th>
                            <th>@L("Version")</th>
                            <th>
                                <div style="text-align:center">@L("IsActive")</div>
                            </th>
                            <th>@L("Action")</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="t in vm.game">
                            <td>{{t.name}}</td>
                            <td>{{t.version}}</td>
                            <td align="center">
                                <i class="material-icons" ng-click="vm.isActivedata(t)" ng-if="t.isActive" style="color:green;">check_box</i>
                                <i class="material-icons" ng-click="vm.isActivedata(t)" ng-if="!t.isActive" style="color:red;">indeterminate_check_box</i>
                            </td>

                            <td class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    <i class="material-icons">menu</i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a class="waves-effect waves-block" ng-click="vm.openGameEditModal(t)"><i class="material-icons">create</i>Edit</a></li>
                                    <li><a class="waves-effect waves-block" ng-click="vm.deletedata(t)"><i class="material-icons">delete_sweep</i>Delete</a></li>
                                </ul>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <button type="button" data-toggle="modal" class="btn btn-primary btn-circle waves-effect waves-circle waves-float pull-right" ng-click="vm.opengameCreateGame()">
                    <i class="material-icons">add</i>
                </button>
            </div>
        </div>
    </div>
</div>